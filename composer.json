{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-bundle": "^2.13",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^3.3",
        "fakerphp/faker": "^1.24",
        "lambdish/phunctional": "^2.1",
        "lexik/jwt-authentication-bundle": "^2.21",
        "ramsey/uuid": "^4.7",
        "symfony/console": "6.4.*",
        "symfony/dotenv": "6.4.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.4.*",
        "symfony/messenger": "6.4.*",
        "symfony/runtime": "6.4.*",
        "symfony/uid": "6.4.*",
        "symfony/yaml": "6.4.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "TaskFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Double\\": "tests/Double/",
            "Tests\\Unit\\": "tests/Unit/",
            "Tests\\Shared\\": "tests/Shared/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpstan": "phpstan analyse src/ tests/ --memory-limit=-1 --ansi",
        "psalm": "psalm --threads=8",
        "psalm-clear": "psalm --clear-cache",
        "phpstan-clear": "phpstan clear-result-cache",
        "static-clear": [
            "@psalm-clear",
            "@phpstan-clear"
        ],
        "style": "./vendor/bin/phpcs -p --colors --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --standard=PSR12 src/ tests/",
        "style-show": "phpcs -p --colors --report=diff",
        "style-fix": "phpcbf -p",
        "unit": "paratest --runner=WrapperRunner --colors --testsuite=\"Unit\"",
        "check-code": [
            "@psalm",
            "@phpstan",
            "@style"
        ],
        "check-code-unit": [
            "@check-code",
            "@unit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        }
    },
    "require-dev": {
        "brianium/paratest": "^6.11",
        "mockery/mockery": "^1.6",
        "phpat/phpat": "^0.11.2",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-mockery": "^1.2",
        "squizlabs/php_codesniffer": "^3.11",
        "symfony/phpunit-bridge": "^7.2",
        "vimeo/psalm": "^6.0"
    }
}
